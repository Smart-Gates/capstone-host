<GuestPhoto>:
    TextInput:
        id: title
        size_hint: 0.8, 0.13
        font_size: 30
        pos_hint: {"x":0.1, "top":0.95}
        hint_text: "Title"
        multiline: False
        
    TextInput:
        id: message
        size_hint: 0.8, 0.13
        font_size: 30
        pos_hint: {"x":0.1, "top":0.8}
        hint_text: "Message"
        multiline: False
        
    TextInput:
        id: email
        size_hint: 0.8, 0.13
        font_size: 30
        pos_hint: {"x":0.1, "top":0.65}
        hint_text: "Email"
        multiline: False
        
    Button:
        text: "Create"
        on_release: root.create_req()
        size_hint: 0.375, 0.2
        pos_hint: {"x":0.1, "y":0.05}
        
    Button:
        id: cancel
        text: "Cancel"
        size_hint: 0.375, 0.2
        pos_hint: {"x":0.525, "y":0.05}


<SigninWindow>:
    # Main Background Properties
    id: main_win
    orientation: "vertical"
    spacing: 10
    canvas.before:
        Color:
            rgba:(1,1,1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    
    # Top Bar Properties
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba:(0.06,0.45,0.45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text:"Login Portal"
            bold: True
            size_hint_x: .9
            
        Button:
            text: "X"
            background_color:(0.06,0.45,0.45, 1)
            background_normal: ''
            size_hint_x: .1
            on_release: app.stop()
    
    # Canvas Properties
    BoxLayout:
        spacing: 10                                                       
        padding: 20
        orientation: 'horizontal'
        
        # Left Side Properties
        BoxLayout:
            size_hint_x: 0.65
            orientation: 'vertical'
                    
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                padding: 100, 0
                size_hint_y: None
                height: 860
                
                Camera:
                    allow_stretch: True
                    #keep_ratio: False
                    id: camera
                    resolution: (640, 480)
                    #size: 100,100
                    height: 600
                
                Label:
                    markup: True
                    size_hint_y: None
                    height: 20
                
                TextInput:
                    size_hint_y: None
                    height: 60
                    font_size: 35
                    id: usr_field
                    hint_text: "Username"
                    multiline: False
                    
                TextInput:
                    size_hint_y: None
                    height: 60
                    font_size: 35
                    id: pwd_field
                    hint_text: "Password"
                    multiline: False
                    password: True
                    
                Label:
                    id: error
                    text: ''
                    markup: True
                    size_hint_y: None
                    height: 100
                
                Button:
                    text: "Sign In"
                    size_hint_y: None
                    height: 80
                    background_color:(0.06,0.45,0.45, 1)
                    background_normal: ''
                    on_release: root.validate_user()
                    
                Button:
                    text: "I'm a Guest"
                    size_hint_y: None
                    height: 80
                    background_color:(0.06,0.45,0.45, 1)
                    background_normal: ''
                    on_release: root.capture()
                    
        # Right Side Properties
        BoxLayout:
            size_hint_x: 0.35
            orientation: 'vertical'
            BoxLayout:
                spacing: 10
                padding: 10
                size_hint_y: 0.20
                orientation: 'horizontal'
                BoxLayout:
                    size_hint_y: None
                    canvas.before:
                        Color:
                            rgba:(0.06,0.45,0.45, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    
                    Image:
                        source: root.update_wicon()
                        size: self.texture_size
                    
                    Label:
                        id: cur_weather
                        text: root.update_wtemp()
                        bold: True
                    
                BoxLayout:
                    size_hint_y: None
                    canvas.before:
                        Color:
                            rgba:(0.06,0.45,0.45, 1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        id: cur_time
                        text: root.update_time()
                        bold: True
            BoxLayout:
                size_hint_y: None
                padding: 10
                size_hint_y: 0.80
                canvas.before:
                    Color:
                        rgba:(0.06,0.45,0.45, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Label:
                    text: "Activity Feed"
                    bold: True
                    
            
