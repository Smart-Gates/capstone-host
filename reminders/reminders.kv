<MenuButton@ToggleButton>
    size_hint: 0.349, 0.1
    color: (0, 0, 0, 1)
    background_color:(1,1,1, 1)
    background_color_down: (0,1,0,1)
    background_normal: ''
    bold: True
    
<MenuButtonAltREM@Button>
    size_hint: 0.349, 0.1
    color: (0, 0, 0, 1)
    background_color:(1,1,1, 1)
    background_color_down: (0,1,0,1)
    background_normal: ''
