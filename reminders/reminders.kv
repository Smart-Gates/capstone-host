<NewRemPop>:
    
    Slider:
        id: slider
        size_hint: 0.55, 0.13
        pos_hint: {"x":0.1, "top":0.5}
        min: root.minimumdate()
        max: root.maximumdate()
        on_value:
            date_label.text = root.timestamp_to_datetime(args[1]) 
    Label:
        pos_hint: {"x":0.7, "y":0.35}
        size_hint: 0.2, 0.13
        text: root.timestamp_to_datetime(slider.value)
        id: date_label
        
    MyTextInputpop:
        id: title
        size_hint: 0.8, 0.13
        #font_size: 30
        pos_hint: {"x":0.1, "top":0.9}
        hint_text: "Title"
        multiline: False
        
    MyTextInputpop:
        id: descrip
        size_hint: 0.8, 0.13
        #font_size: 30
        pos_hint: {"x":0.1, "top":0.7}
        hint_text: "Description"
        multiline: False
        
##    TextInput:
##        id: time
##        size_hint: 0.8, 0.13
##        font_size: 30
##        pos_hint: {"x":0.1, "top":0.5}
##        hint_text: "Time"
##        multiline: False
        
    Button:
        id: addrem
        text: "Add"
        size_hint: 0.375, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release: root.new_rem()
        
    Button:
        id: cancel
        text: "Cancel"
        size_hint: 0.375, 0.2
        pos_hint: {"x":0.525, "y":0.1}
        
