<ReminderWindow>:
    
    ScreenManager:
        id: scrn_mngr
        
        Screen:
            id: reminders
            name: 'reminders'
            pos_hint: {"x": 0.35}
            size_hint: 0.55, 0.75
                
        Screen:
            id: meetings
            name: 'meetings'
            pos_hint: {"x": 0.35}
            size_hint: 0.55, 0.75       
                    
    # Teal area Layout
    FloatLayout:
        pos_hint: {"x": 0, "top": 1}
        size_hint: 1, 0.25
        canvas.before:
            Color:
                rgba:(0.06,0.45,0.55, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        Image:
            pos_hint: {'x': 0.07, 'top': 0.65}
            size_hint: None, None
            allow_stretch: True
            keep_ratio: False
            source: 'user-icon.png'
            
            
        MyTextInput:
            pos_hint: {"x": 0.35, "top": 0.40}
            size_hint: 0.55, 0.33
            id: usr_field
            hint_text: "Search"
            multiline: False
    
    # Left Menu Layout
    FloatLayout:
        pos_hint: {"x": 0, "top": 0.75}
        size_hint: 1, 0.75
        
        FloatLayout:
            pos_hint: {"x": 0, "top": 1}
            size_hint: 0.349, 1
            canvas.before:
                Color:
                    rgba:(1,1,1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        FloatLayout:
            pos_hint: {"x": 0.9, "top": 1}
            size_hint: 0.1, 1
            canvas.before:
                Color:
                    rgba:(1,1,1, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            
        MenuButton:
            pos_hint: {"x": 0, "top": 1}
            text: "View Reminders"
            state: 'down'
            group: 'toggle'
            on_state: root.change_screen(self)
        MenuButton:
            pos_hint: {"x": 0, "top": 0.9}
            text: "View Meetings"
            group: 'toggle'
            on_state: root.change_screen(self)
        MenuButton:
            pos_hint: {"x": 0, "top": 0.8}
            text: "Calander Mode"
            group: 'toggle'
        MenuButtonAltREM:
            pos_hint: {"x": 0, "top": 0.7}
            text: "Add Reminder"
            on_release: root.add_rem_pop()
        MenuButtonAltREM:
            pos_hint: {"x": 0, "top": 0.6}
            text: "Create Event"
            on_release: root.add_eve_pop()
        MenuButtonAltREM:
            pos_hint: {"x": 0, "top": 0.1}
            text: "Log Out"
            on_release: root.logout()
            
        # thin dividing line
        FloatLayout:
            pos_hint: {"x": 0.349, "top": 1}
            size_hint: 0.001, 1
            canvas.before:
                Color:
                    rgba:(0.06,0.45,0.55, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
                    
        
                    
                    
    